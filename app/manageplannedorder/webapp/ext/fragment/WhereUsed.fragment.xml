<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form">
  <Dialog id="_IDGenDialogWhereUsed"
    stretch="true"
    resizable="false"
    type="Message"
    state="Information"
    icon="sap-icon://ai"
    title="Where Used {selected>/Material}">
    <content>
      <form:SimpleForm id="SimpleFormWhereUsed"
        singleContainerFullSize="true">
        <Label id="labelMaterialWhereUsed"
          text="Material" />
        <Text id="inputMaterialWhereUsed"
          text="{selected>/Material}" />
      </form:SimpleForm>
      <Table id="selectedItemsTableWhereUsed">
        <columns>
          <Column id="columnCplndOrdWhereUsed">
            <Text id="textCplndOrdWhereUsed"
              text="Combined Planned Order" />
          </Column>
          <Column id="columnMaterialWhereUsed">
            <Text id="textMaterialWhereUsed"
              text="Material" />
          </Column>
          <Column id="columnPlantWhereUsed">
            <Text id="textPlantWhereUsed"
              text="Plant" />
          </Column>
          <Column id="columnStorageLocationWhereUsed">
            <Text id="textStorageLocationWhereUsed"
              text="Storage Location" />
          </Column>
          <Column id="columnQtyWhereUsed">
            <Text id="textQtyWhereUsed"
              text="Available Quantity" />
          </Column>
        </columns>
      </Table>
    </content>
    <buttons>
      <Button id="_IDGenBtnCancelWhereUsed"
        text="Chiudi"
        type="Back"
        press="onCloseDialog" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
