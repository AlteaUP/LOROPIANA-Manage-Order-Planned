<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="_IDGenDialogPezze"
        stretch="true"
        resizable="false"
        type="Message"
        state="Information"
        icon="sap-icon://ai"
        title="Assegna Pezze"
    >
        <content>
            <Text
                id="_IDGenTextPezze"
                text="Assegna Pezze"
            />
            <form:SimpleForm
                id="SimpleFormPezze"
                columnsM="2"
                columnsL="3"
                columnsXL="4"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanXL="0"
                labelSpanL="12"
                labelSpanM="12"
                labelSpanXL="12"
                visible="true"
                editable="false"
                singleContainerFullSize="false"
                layout="ColumnLayout"
            >
                <Label
                    id="labelCplndOrd"
                    text="Cplnd Ord"
                />
                <Text
                    id="inputCplndOrd"
                    text="{/CplndOrd}"
                />
                <Label
                    id="labelMaterial"
                    text="Material"
                />
                <Text
                    id="inputMaterial"
                    text="{/Material}"
                />
                <Label
                    id="labelRequiredQuantity"
                    text="Required Quantity"
                />
                <Text
                    id="inputRequiredQuantity"
                    text="{/RequiredQuantity}"
                />
                <Label
                    id="labelWithdrawnQuantity"
                    text="Withdrawn Quantity"
                />
                <Text
                    id="inputWithdrawnQuantity"
                    text="{/WithdrawnQuantity}"
                />
                <Label
                    id="labelBaseUnit"
                    text="Base Unit"
                />
                <Text
                    id="inputBaseUnit"
                    text="{/BaseUnit}"
                />
            </form:SimpleForm>

            <Table
                id="selectedItemsTable"
                items="{/selectedItems}"
            >
                <columns>
                    <Column id="columnBatch">
                        <Text
                            id="textBatch"
                            text="Batch"
                        />
                    </Column>
                    <Column id="columnMaterial">
                        <Text
                            id="textMaterial"
                            text="Material"
                        />
                    </Column>
                    <Column id="columnStorageLocation">
                        <Text
                            id="textStorageLocation"
                            text="Storage Location"
                        />
                    </Column>
                    <Column id="columnMatlWrhsStkQtyInMatlBaseUnit">
                        <Text
                            id="textMatlWrhsStkQtyInMatlBaseUnit"
                            text="Storage Location Stock"
                        />
                    </Column>
                    <Column id="columnAvailableQuantity">
                        <Text
                            id="textAvailableQuantity"
                            text="Available Quantity"
                        />
                    </Column>
                    <Column id="columnCombPlanAllQty">
                        <Text
                            id="textCombPlanAllQty"
                            text="Comb Plan All Qty"
                        />
                    </Column>
                    <Column id="columnCustomQty">
                        <Text
                            id="textCustomQty"
                            text="Quantity to Assign"
                        />
                    </Column>
                    <Column id="columnTotalPlanAllQty">
                        <Text
                            id="textTotalPlanAllQty"
                            text="Total Plan All Qty"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="selectedItemsTableItem">
                        <cells>
                            <ObjectIdentifier
                                id="valueBatch"
                                title="{Batch}"
                            />
                            <Text
                                id="valueMaterial"
                                text="{Material}"
                            />
                            <Text
                                id="valueStorageLocation"
                                text="{StorageLocation}"
                            />
                            <Text
                                id="valueMatlWrhsStkQtyInMatlBaseUnit"
                                text="{StorageLocationStock}"
                            />
                            <Text
                                id="valueAvailableQuantity"
                                text="{AvaibilityQty}"
                            />
                            <Text
                                id="valueTotalPlanAllQty"
                                text="{TotalPlanAllQty}"
                            />
                            <Text
                                id="valueCombPlanAllQty"
                                text="{CombPlanAllQty}"
                            />
                            <StepInput
                                id="customQty"
                                value="{CustomQty}"
                                step="1"
                                min="0"
                                max="{path: 'AvaibilityQty', formatter: '.formatAvailableQty'}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button
                id="_IDGenBtnAssegnaPezze"
                text="Assegna"
                type="Accept"
                press="doAssign"
            />
            <Button
                id="_IDGenBtnDisassegnaPezze"
                text="Disassegna"
                type="Negative"
                press="doDisassemble"
            />
            <Button
                id="_IDGenBtnWhereUsed"
                text="Where Used"
                type="Emphasized"
                press="doWhereUsed"
            />
            <Button
                id="_IDGenBtnCancelPezze"
                text="Chiudi"
                type="Back"
                press="onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
