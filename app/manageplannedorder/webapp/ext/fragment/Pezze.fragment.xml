<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="_IDGenDialogPezze"
        stretch="true"
        resizable="false"
        type="Message"
        state="Information"
        icon="sap-icon://ai"
        title="Assegna Pezze"
    >
        <content>
            <Text
                id="_IDGenTextPezze"
                text="Assegna Pezze"
            />
            <form:SimpleForm
                id="SimpleFormPezze"
                columnsL="3"
                columnsM="3"
                columnsXL="3"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanXL="0"
                labelSpanL="12"
                labelSpanM="12"
                labelSpanXL="12"
                visible="true"
                editable="false"
                singleContainerFullSize="false"
                layout="ColumnLayout"
            >
                <Label
                    text="Cplnd Ord"
                    id="labelCplndOrd"
                />
                <Text
                    text="{/CplndOrd}"
                    id="inputCplndOrd"
                />

                <Label
                    text="Material"
                    id="labelMaterial"
                />
                <Text
                    text="{/Material}"
                    id="inputMaterial"
                />
                <Label
                    text="Available Quantity"
                    id="labelAvailableQuantity"
                />
                <Text
                    text="{/AvailableQuantity}"
                    id="inputAvailableQuantity"
                />
                <Label
                    text="Required Quantity"
                    id="labelRequiredQuantity"
                />
                <Text
                    text="{/RequiredQuantity}"
                    id="inputRequiredQuantity"
                />
                <Label
                    text="Withdrawn Quantity"
                    id="labelWithdrawnQuantity"
                />
                <Text
                    text="{/WithdrawnQuantity}"
                    id="inputWithdrawnQuantity"
                />
                <Label
                    text="Base Unit"
                    id="labelBaseUnit"
                />
                <Text
                    text="{/BaseUnit}"
                    id="inputBaseUnit"
                />
            </form:SimpleForm>

            <Table
                items="{/selectedItems}"
                id="selectedItemsTable"
                mode="MultiSelect"
            >
                <columns>
                    <Column id="columnBatch">
                        <Text
                            id="textBatch"
                            text="Batch"
                        />
                    </Column>
                    <Column id="columnMaterial">
                        <Text
                            id="textMaterial"
                            text="Material"
                        />
                    </Column>
                    <Column id="columnStorageLocation">
                        <Text
                            id="textStorageLocation"
                            text="Storage Location"
                        />
                    </Column>

                    <Column id="columnMatlWrhsStkQtyInMatlBaseUnit">
                        <Text
                            id="textMatlWrhsStkQtyInMatlBaseUnit"
                            text="Storage Location Stock"
                        />
                    </Column>
                    <Column id="columnCombPlanAllQty">
                        <Text
                            id="textCombPlanAllQty"
                            text="Comb Plan All Qty"
                        />
                    </Column>

                    <Column id="columnCustomQty">
                        <Text
                            id="textCustomQty"
                            text="Quantity to Assign"
                        />
                    </Column>
                    <Column id="columnTotalPlanAllQty">
                        <Text
                            id="textTotalPlanAllQty"
                            text="Total Plan All Qty"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="selectedItemsTableItem">
                        <cells>
                            <ObjectIdentifier
                                id="valueBatch"
                                title="{Batch}"
                            />
                            <Text
                                id="valueMaterial"
                                text="{Material}"
                            />
                            <Text
                                id="valueStorageLocation"
                                text="{StorageLocation}"
                            />
                            <Text
                                id="valueMatlWrhsStkQtyInMatlBaseUnit"
                                text="{StorageLocationStock}"
                            />
                            <Text
                                id="valueTotalPlanAllQty"
                                text="{TotalPlanAllQty}"
                            />
                            <Text
                                id="valueCombPlanAllQty"
                                text="{CombPlanAllQty}"
                            />

                            <StepInput
                                id="customQty"
                                value="{CustomQty}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button
                id="_IDGenBtnAssegnaPezze"
                text="Assegna"
                type="Accept"
                press=".doAssign"
            />
            <!-- core:require="{ handler: 'manageplannedorder/manageplannedorder/ext/controller/Pezze'}" -->
            <Button
                id="_IDGenBtnCancelPezze"
                text="Chiudi"
                type="Back"
                press="onCloseDialog"
            />
            <!-- core:require="{ handler: 'manageplannedorder/manageplannedorder/ext/controller/Pezze'}" -->
        </buttons>
    </Dialog>
</core:FragmentDefinition>
