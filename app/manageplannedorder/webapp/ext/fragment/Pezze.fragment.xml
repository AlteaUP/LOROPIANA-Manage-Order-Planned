<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:macros="sap.fe.macros"
>
    <Dialog
        id="_IDGenDialogPezze"
        stretch="true"
        resizable="false"
        type="Message"
        state="Information"
        icon="sap-icon://ai"
        title="Assegna Pezze"
    >
        <content>
            <Text
                id="_IDGenTextPezze"
                text="Assegna Pezze"
            />
            <form:SimpleForm
                id="SimpleFormPezze"
                columnsM="2"
                columnsL="3"
                columnsXL="4"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanXL="0"
                labelSpanL="12"
                labelSpanM="12"
                labelSpanXL="12"
                visible="true"
                editable="false"
                singleContainerFullSize="false"
                layout="ColumnLayout"
            >
                <Label
                    id="labelCplndOrd"
                    text="Cplnd Ord"
                />
                <Text
                    id="inputCplndOrd"
                    text="{selected>/CplndOrd}"
                />
                <Label
                    id="labelMaterial"
                    text="Material"
                />
                <Text
                    id="inputMaterial"
                    text="{selected>/Material}"
                />
                <Label
                    id="labelRequiredQuantity"
                    text="Required Quantity"
                />
                <Text
                    id="inputRequiredQuantity"
                    text="{selected>/RequiredQuantity}"
                />
                <Label
                    id="labelWithdrawnQuantity"
                    text="Withdrawn Quantity"
                />
                <Text
                    id="inputWithdrawnQuantity"
                    text="{selected>/WithdrawnQuantity}"
                />
                <Label
                    id="labelBaseUnit"
                    text="Base Unit"
                />
                <Text
                    id="inputBaseUnit"
                    text="{selected>/BaseUnit}"
                />
            </form:SimpleForm>

            <Table
                id="selectedItemsTable"
                items="{ 
                    path: '/ZZ1_MFP_ASSIGNMENT',
                    parameters : {$$updateGroupId : 'CreatePezzeBatch'}
                }"
            >
                <columns>
                    <Column id="columnBatch">
                        <Text
                            id="textBatch"
                            text="Batch"
                        />
                    </Column>
                    <Column id="columnMaterial">
                        <Text
                            id="textMaterial"
                            text="Material"
                        />
                    </Column>
                    <Column id="columnStorageLocation">
                        <Text
                            id="textStorageLocation"
                            text="Storage Location"
                        />
                    </Column>
                    <!-- <Column id="columnMatlWrhsStkQtyInMatlBaseUnit">
                        <Text
                            id="textMatlWrhsStkQtyInMatlBaseUnit"
                            text="Storage Location Stock"
                        />
                    </Column> -->
                    <Column id="columnAvailableQuantity">
                        <Text
                            id="textAvailableQuantity"
                            text="Available Quantity"
                        />
                    </Column>
                    <!-- <Column id="columnCombPlanAllQty">
                        <Text
                            id="textCombPlanAllQty"
                            text="Comb Plan All Qty"
                        />
                    </Column>
                    <Column id="columnTotalPlanAllQty">
                        <Text
                            id="textTotalPlanAllQty"
                            text="Total Plan All Qty"
                        />
                    </Column> -->
                    <Column id="columnCustomQty">
                        <Text
                            id="textCustomQty"
                            text="Quantity to Assign"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="selectedItemsTableItem">
                        <cells>
                            <ObjectIdentifier
                                id="valueBatch"
                                title="{CHARG}"
                            />
                            <Text
                                id="valueMaterial"
                                text="{MATNR}"
                            />
                            <Text
                                id="valueStorageLocation"
                                text="{LGORT}"
                            />
                            <!-- <Text
                                id="valueMatlWrhsStkQtyInMatlBaseUnit"
                                text="{StorageLocationStock}"
                            /> -->
                            <Text
                                id="valueAvailableQuantity"
                                text="{AvaibilityQty}"
                            />
                            <!-- <Text
                                id="valueTotalPlanAllQty"
                                text="{TotalPlanAllQty}"
                            />
                            <Text
                                id="valueCombPlanAllQty"
                                text="{CombPlanAllQty}"
                            /> -->
                            <Input
                                id="customQty"
                                value="{QTA_ASS_V}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <!-- <macros:Table
                id="TableAssegnaPezze"
                metaPath="@com.sap.vocabularies.UI.v1.LineItem#tableAssignment"
                contextPath="/ZZ1_MFP_ASSIGNMENT"
                header="Pezze"
            /> -->
        </content>
        <buttons>
            <Button
                id="_IDGenBtnAssegnaPezze"
                text="Assegna"
                type="Accept"
                press="doAssign"
            />
            <Button
                id="_IDGenBtnCancelPezze"
                text="Chiudi"
                type="Back"
                press="onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
