<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
    xmlns:macros="sap.fe.macros"
>
    <Dialog
        id="DialogPezze"
        stretch="true"
        resizable="true"
        type="Message"
        state="Information"
        icon="sap-icon://ai"
        title="Assegna Pezze"
    >
        <content>
          <form:SimpleForm
                id="SimpleFormPezzeA"
                columnsM="2"
                columnsL="3"
                columnsXL="4"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanXL="0"
                labelSpanL="12"
                labelSpanM="12"
                labelSpanXL="12"
                visible="true"
                editable="false"
                singleContainerFullSize="false"
                layout="ColumnLayout"
            >
                <Label
                    id="labelMaterialA"
                    text="Material"
                />
                <Text
                    id="inputMaterialA"
                    text="{selected>/Material}"
                />
                <Label
                    id="labelRequiredQuantityA"
                    text="Required Quantity"
                />
                <Text
                    id="inputRequiredQuantityA"
                    text="{selected>/RequiredQuantity}"
                />
                <Label
                    id="labelProductDescriptionA"
                    text="{i18n>ProductDescription}"
                />
                <Text
                    id="inputProductDescriptionA"
                    text="{selected>/ProductDescription}"
                />
                <Label
                    id="labelAvailableQuantityA"
                    text="{i18n>AvailableQuantity}"
                />
                <Text
                    id="inputAvailableQuantityA"
                    text="{selected>/AvailableQuantity}"
                />
                <Label
                    id="labelBaseUnitA"
                    text="Base Unit"
                />
                <Text
                    id="inputBaseUnitA"
                    text="{selected>/BaseUnit}"
                />
                <Label
                    id="labelTotalPlanAllQtyA"
                    text="Tot {i18n>CombPlanAllQty}"
                />
                <Text
                    id="inputTotalPlanAllQtyA"
                    text="{selected>/TotalPlanAllQty}"
                />
                <Label
                    id="labelOpenQtyA"
                    text="Tot {i18n>OpenQty}"
                />
                <Text
                    id="inputOpenQtyA"
                    text="{selected>/OpenQty}"
                />
                <Label
                    id="labelRemainingQtyA"
                    text="Tot {i18n>RemainingQty}"
                />
                <Text
                    id="inputRemainingQtyA"
                    text=""
                />
            </form:SimpleForm>
          <Table id="selectedItemsTable1">
                <columns>
                    <Column id="columnBatch1">
                        <Text
                            id="textBatch1"
                            text="Batch"
                        />
                    </Column>
                    <Column id="columnCplndOrd">
                        <Text
                            id="textCplndOrd"
                            text="Comb Pl Order"
                        />
                    </Column>
                    <Column id="columnStockSegment1">
                        <Text
                            id="textStockSegment1"
                            text="Stock Segment"
                        />
                    </Column>
                    <Column id="columnInventorySpecialStockType1">
                        <Text
                            id="textInventorySpecialStockType1"
                            text="Special Stock"
                        />
                    </Column>
                    <Column id="columnBatchBySupplier1">
                        <Text
                            id="textBatchBySupplier1"
                            text="Batch By Supplier"
                        />
                    </Column> 
                    <Column id="columnStorageLocation1">
                        <Text
                            id="textStorageLocation1"
                            text="Storage Location"
                        />
                    </Column>
                    <Column id="columnAvailableQuantity1">
                        <Text
                            id="textAvailableQuantity1"
                            text="Available Quantity"
                        />
                    </Column>
                    <Column id="columnCOPERTURA1">
                        <Text
                            id="textCOPERTURA1"
                            text="Copertura (%)"
                        />
                    </Column>
                    <Column id="columnCustomQty1">
                        <Text
                            id="textCustomQty1"
                            text="Quantity to Assign"
                        />
                    </Column>
                </columns>
            </Table>
        </content>
        <buttons>
            <Button
                id="BtnAssegnaPezze"
                text="Assegna"
                type="Accept"
                press="pressDoAssign"
            />
            <Button
                id="BtnCancelPezze"
                text="Chiudi"
                type="Back"
                press="onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
