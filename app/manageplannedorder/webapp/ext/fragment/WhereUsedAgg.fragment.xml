<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="_IDGenDialogWhereUsedA"
        stretch="true"
        resizable="false"
        type="Message"
        state="Information"
        icon="sap-icon://ai"
        title="Where Used {selected>/Material}"
    >
        <content>
            <form:SimpleForm
                id="SimpleFormWhereUsedA"
                singleContainerFullSize="true"
                layout="ColumnLayout"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                labelSpanL="12"
                labelSpanM="12"
                labelSpanS="12"
                columnsL="3"
                columnsM="3"
                columnsXL="3"
            >
                <Label
                    id="labelMaterialWhereUsedA"
                    text="Material"
                />
                <Text
                    id="inputMaterialWhereUsedA"
                    text="{selected>/Material}"
                />
                <Label
                    id="labelPlantWhereUsedA"
                    text="Plant"
                />
                <Text
                    id="inputPlantWhereUsedA"
                    text="{selected>/Plant}"
                />
                <Label
                    id="labelStorageLocationWhereUsedA"
                    text="StorageLocation"
                />
                <Text
                    id="inputStorageLocationWhereUsedA"
                    text="{selected>/StorageLocation}"
                />
            </form:SimpleForm>
