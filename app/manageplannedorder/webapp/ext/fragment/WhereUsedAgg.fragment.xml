                            text="flag"
                        />
                    </Column>
                </columns>
            </Table> -->
            <Table
                id="selectedItemsTableWhereUsedA"
                mode="MultiSelect"
            >
                <columns>
                    <Column id="columnCplndOrdWhereUsedA">
                        <Text
                            id="textCplndOrdWhereUsedA"
                            text="Combined Planned Order"
                        />
                    </Column>
                    <Column id="columnQtyWhereUsedA">
                        <Text
                            id="textQtyWhereUsedA"
                            text="Available Quantity"
                        />
                    </Column>
                </columns>
            </Table>
        </content>
        <buttons>
            <Button
                id="_IDGenBtnCancelWhereUsedA"
                text="Chiudi"
                type="Back"
                press="onCloseDialog"
            />
            <Button
                id="_IDGenBtnDesassemblyWhereUsedA"
                text="Desassembly"
                type="Accept"
                press="pressDesassembly"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
