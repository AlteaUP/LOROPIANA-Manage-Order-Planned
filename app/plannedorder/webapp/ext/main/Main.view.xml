<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="plannedorder.plannedorder.ext.main.Main"
>
    <Page
        id="Main"
        title="{i18n>MainTitle}"
    >
        <content>
            <VBox id="VBox">
                <macros:FilterBar
                    id="FilterBar"
                    metaPath="/ZZ1_CombinedPlnOrdersAPI/@com.sap.vocabularies.UI.v1.SelectionFields#filterBarMacro"
                />
                <macros:Table
                    id="TableCombined"
                    rowPress=".onRowPress"
                    metaPath="/ZZ1_CombinedPlnOrdersAPI/@com.sap.vocabularies.UI.v1.LineItem#tableMacro"
                    filterBar="FilterBar"
                    header="Combined"
                />

                <Button
                    id="asd"
                    text="asd"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
